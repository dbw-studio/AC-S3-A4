
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- add restaurant --}}
<div class="container">
  <div class="row mt-4 text-right">
    <div class="col-12">
      <a href="/restaurant/new">
        <button class="btn btn-info">新增餐廳</button>
      </a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container my-5">
  <div class="row">
    <div class="col-md-12 col-12 text-center">
      <h3>{{{ notice }}}</h3>
      <h3>{{{ emptyNotice }}}</h3>

    </div>
  </div>
  <div class="row">
      {{#each restaurants}}
        <div class="col-12 col-md-6 col-lg-4">
          <a href="./restaurants/{{ this._id }}" class="text-secondary">
            <div class="card mb-3">
              <div class="card-img-top"
                style="height: 250px; background-image: url({{ this.image }}); background-size: cover; background-position: center center">
              </div>
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{ this.name }}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>{{ this.category }}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <div class="row mb-5 justify-content-end">
            <a href="./restaurants/{{ this._id }}/edit">
              <button type="submit" class="btn btn-info mr-3">Edit</button>
            </a>
            <a href="./restaurants/{{ this._id }}">
              <button type="submit" class="btn btn-info mr-3">Detail</button>
            </a>
            <form action="./restaurants/{{ this._id }}/delete" method="POST">
              <a href="./restaurants/{{ this._id }}/delete">
                <button type="submit" class="btn btn-info mr-3" id="delete-submit" onclick="return(confirm('確認要刪除【{{ this.name }}】嗎？'))">Delete</button>
              </a>
            </form>

          </div>
        </div>

      {{/each}}
  </div>
</div>