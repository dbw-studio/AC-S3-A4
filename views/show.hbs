<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-7 mx-auto mb-5">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="{{ restaurant.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5">
        {{ restaurant.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{ restaurant.image }}" alt="{{ restaurant.image }}"
        style="max-width: 600px;">
    </div>
  </div>
  <div class="row mb-5 justify-content-center">
    <a href="/restaurants/{{ restaurant._id }}/edit">
      <button type="submit" class="btn btn-info mr-3">Edit</button>
    </a>
    <form action="/restaurants/{{ restaurant._id }}/delete" method="POST">
      <a href="/restaurants/{{ restaurant._id }}/delete">
        <button type="submit" class="btn btn-info mr-3" onclick="return(confirm('確認要刪除【{{ restaurant.name }}】嗎？'))">Delete</button>
      </a>
    </form>
    <a href="/">
      <button type="submit" class="btn btn-info mr-3">Back</button>
    </a>
  </div>
</div>